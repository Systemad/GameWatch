@page "/"
@using System.Globalization
@using GameWatch.Features.IGameDatabase.Models
@layout PageWrapper

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h4" Align="Align.Center">Games released this month</MudText>
<MudText Typo="Typo.h4" Align="Align.Center">@CurrentDate.ToString("MMMM", CultureInfo.InvariantCulture)</MudText>


@if (Games is not null)
{
    <MudGrid Class="mt-8" Justify="Justify.Center">
        @foreach(var game in Games)
        {
            <MudItem xs="4">
                <GameCard Game="@game"/>
            </MudItem>
        }
    </MudGrid>   
}
else
{
    <MudGrid Class="mt-8" Justify="Justify.Center">
    @for(int i = 0; i < 20; i++)
    {
        <MudItem xs="4">
            <GameCard /> 
            </MudItem>

    }
    </MudGrid>   
    
}
